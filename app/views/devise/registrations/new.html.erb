<h1>ユーザ登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), id: "signup-form", html: { 'data-parsley-validate' => '', 'parsley-use-html5-constraints' => false }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control", required: "", 'data-parsley-type' => 'email' %>
      </div>

      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, class: "form-control", required: "" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control", required: "", 'data-parsley-minlength' => '6' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", required: "", 'data-parsley-minlength' => '6' %>
      </div>

      <div class="actions">
        <%= f.submit "登録", class: "btn btn-block btn-primary" %>
      </div>
    <% end %>

    <%= link_to "ログイン画面へ", new_user_session_path %>
  </div>
</div>

<script type="text/javascript">
  $('#signup-form').parsley();
</script>
