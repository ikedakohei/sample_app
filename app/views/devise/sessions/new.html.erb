<h1>ログイン</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), id: "login-form", html: { 'data-parsley-validate' => '', 'parsley-use-html5-constraints' => false }) do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control", required: "", 'data-parsley-type' => 'email' %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control", required: "", 'data-parsley-minlength' => '6' %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-block btn-primary" %>
      </div>
    <% end %>
    <%= link_to "ユーザ登録画面へ", new_user_registration_path %>
  </div>
</div>

<script type="text/javascript">
  $('#login-form').parsley();
</script>